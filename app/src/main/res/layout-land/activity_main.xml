<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:id="@id/layoutFragment">


    <fragment
        android:id="@+id/ScoreLand"
        class="hu.jonat.darts_scoreboard.ScoreFragment"
        android:tag="ScoreFragment"
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_weight="2"
         />

    <fragment
        android:id="@+id/StatisticLand"
        class="hu.jonat.darts_scoreboard.StatisticFragment"
        android:tag="StaticFragment"
        android:layout_width="1dip"
        android:layout_height="fill_parent"
        android:layout_weight="1"/>

</LinearLayout>
